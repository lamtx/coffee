<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:paddingBottom="@dimen/half_item_spacing"
    android:paddingEnd="@dimen/item_spacing"
    android:paddingStart="@dimen/item_spacing"
    android:paddingTop="@dimen/half_item_spacing">

    <TextView
        android:id="@+id/textTotal"
        style="@style/Title"
        android:lines="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/textName"
        style="@style/Text"
        android:lines="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/textTotal" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/textName"
        android:layout_toStartOf="@id/textTotal">

        <TextView
            android:id="@+id/textPrice"
            style="@style/Dim"
            android:lines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/Dim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/horizontal_text_spacing"
            android:layout_marginRight="@dimen/horizontal_text_spacing"
            android:text="Ã—" />

        <TextView
            android:id="@+id/textQuantity"
            style="@style/Dim"
            android:lines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>
