<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/OuterPopup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        style="@style/Popup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:clickable="true"
        android:minWidth="@dimen/message_box_min_width"
        android:orientation="horizontal"
        android:padding="@dimen/item_padding">

        <FrameLayout
            android:id="@+id/indicatorLayout"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="@dimen/item_padding">

            <ImageView
                android:id="@+id/checkedIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_check_circle"
                android:tint="@color/flatui_color_peter_river" />

            <ImageView
                android:id="@+id/failedIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_warn" />

            <ProgressBar
                android:id="@+id/loadingIndicator"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:indeterminate="true" />
        </FrameLayout>

        <TextView
            android:id="@android:id/title"
            style="@style/Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/item_padding"
            android:text="asdasdasf"
            android:textStyle="bold"
            android:visibility="gone" />

    </LinearLayout>
</FrameLayout>